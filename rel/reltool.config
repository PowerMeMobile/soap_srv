{sys, [
    {lib_dirs, ["../..", "../deps"]},
    {erts, [{mod_cond, derived}, {app_file, strip}]},
    {app_file, strip},
    {rel, "soap_srv", "1", [
        kernel,
        stdlib,
        sasl,
        soap_srv
    ]},
    {rel, "develop", "", [
        kernel,
        stdlib,
        sasl,
        sync,
        soap_srv
    ]},
    {rel, "start_clean", "", [
        kernel,
        stdlib
    ]},
    {boot_rel, "soap_srv"},
    {profile, embedded},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
    {excl_app_filters, ["\.gitignore"]},
    {app, hipe, [{incl_cond, exclude}]},
    {app, soap_srv, [{mod_cond, app}, {incl_cond, include}]},
    {app, sync, [{mod_cond, app}, {incl_cond, include}]},
    {app, eper, [{incl_cond, include}]},
    {app, runtime_tools, [{incl_cond, include}]},
    {app, entop, [{incl_cond, include}]}

]}.

{target_dir, "soap_srv"}.

{overlay, [
    {mkdir, "log/sasl"},
    {mkdir, "log/http"},
    {mkdir, "log/http/in"},
    {mkdir, "log/http/out"},
    {mkdir, "log/pdu"},
    {mkdir, "data"},
    {copy, "files/WSDL", "data/"},
    {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
    {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
    {copy, "files/soap_srv", "bin/soap_srv"},
    {copy, "files/soap_srv.cmd", "bin/soap_srv.cmd"},
    {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
    {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
    {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
    {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
]}.
