{erl_opts, [
	warn_export_all,
	warn_missing_spec,
	debug_info
]}.

%% NOTE: rebar is able to make undefined_function_calls and
%% exports_not_used predefined xref checks only, but
%% exports_not_used does not work with subapps dirs structure
%% It is necessary to implement manual exports_not_used xref check
{xref_checks, [undefined_function_calls]}.

{sub_dirs, ["rel"]}.

{deps, [
    {alley_common, ".*", {git, "https://github.com/PowerMeMobile/alley_common", {tag, "1.0.0"}}},
    {alley_dto, ".*", {git, "https://github.com/PowerMeMobile/alley_dto.git", {tag, "2.0.0"}}},
    {alley_services, ".*", {git, "https://github.com/PowerMeMobile/alley_services.git", {tag, "2.0.0"}}},
    {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "0.10.0"}}},
    {erlsom, ".*", {git, "https://github.com/willemdj/erlsom.git", "def76b9c82d79c0f2b4"}},
    {record_info, ".*", {git, "https://github.com/bipthelin/erlang-record_info.git", "HEAD"}},
    {entop, "0.0.1", {git, "git://github.com/mazenharake/entop.git", {branch, "master"}}},
    {eper, ".*", {git, "git://github.com/massemanet/eper.git", {branch, "master"}}},
    {recon, ".*", {git, "git://github.com/ferd/recon.git", {tag, "2.2.0"}}},
    {sync, ".*", {git, "https://github.com/ten0s/sync.git", {branch, "dk_support_release"}}}
]}.
{cover_enabled, true}.
{eunit_opts, [verbose]}.
